<div class="top-navigation-bar" style="display:none">
<h2 class="entity-title"><%=t.tryton_setup.title%></h2>
</div>
<div class="admin_content_wrapper">
<div data-alerts="alerts" data-titles="{'success':'<%=t.entitymanagement.success%>','warning':'<%=t.entitymanagement.warning%>','error':'<%=t.entitymanagement.error%>'}" data-fade="10000"></div>
<form name="variables" action="/api/svariables" method="PUT" 
      data-remote="ajax" data-remote-method="PUT">

  <h2><%=t.tryton_setup.connection%></h2>

  <%= render_secure_variable_input_text('tryton.url', t.tryton_setup.url, 80, 80) %>
  <%= render_secure_variable_input_text('tryton.database', t.tryton_setup.database, 80, 80) %>
  <%= render_secure_variable_input_text('tryton.username', t.tryton_setup.username, 80, 80) %>
  <%= render_secure_variable_input_text('tryton.password', t.tryton_setup.password, 80, 80) %>      
  
  <h2><%=t.tryton_setup.sync %></h2>
  <%= render_variable_checkbox_boolean('tryton.sync_deposit', t.tryton_setup.sync_deposit) %> 
  
  <div class="formrow-botonera">
  	<input type="submit" value="<%=t.entitymanagement.update%>" 
  	       class="button blue-button">
  </div>
</form>
</div>